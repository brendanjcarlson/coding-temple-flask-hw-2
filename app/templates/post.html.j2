{% extends "base.html.j2" %}

{% block content %}
<h2>{{ post.title }}</h2>
<p>{{ post.body }}</p>

{% if comments %}
<h3>Comments</h3>
<ul>
    {% for comment in comments %}
    <div>
        <p>{{ comment.user.username }} says: {{ comment.body }}</p>
    </div>
    {% endfor %}
</ul>
{% endif %}
{% endblock %}