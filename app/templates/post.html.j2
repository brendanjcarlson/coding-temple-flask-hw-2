{% extends "base.html.j2" %}

{% block content %}
<div class="mb-5">
    <h2>{{ post.title }}</h2>
    <p>{{ post.body }}</p>
</div>

{% if comments %}
<h3>Comments</h3>
<ul>
    {% for comment in comments %}
    <div>
        <p>{{ comment.user.username }} says: {{ comment.body }}</p>
    </div>
    {% endfor %}
</ul>
{% endif %}
{% endblock %}